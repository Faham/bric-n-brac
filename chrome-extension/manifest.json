{
	"name": "Bric Screenshot",
	"version": "1.0",
	"description": "Capture screenshots for bric files",
	"background": { 
		"scripts": [
			"js/jquery.min.js",
			"js/background.js"
		]
	},
	"web_accessible_resources": [
		"html/save-dialog.html",
		"html/screenshot.html"
	],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"css": ["css/overlay.css", "css/save-dialog.css"],
			"js": ["js/jquery.min.js"]
		}
	],
	"plugins": [
		{"path": "bin/npBracExtenssionProvider.dll", "public": true},
		{"path": "bin/BracExtenssionProvider.plugin", "public": true}
	],
	"browser_action": {
		"default_icon": "img/camera.png",
		"default_title": "Take a screenshot!"
	},
	"permissions": [
		"tabs",
		"*://*/html/screenshot.html",
		"*://*/*",
		"management"
	],
	"manifest_version": 2
}
