{
	"name": "Bric Screenshot",
	"version": "1.0",
	"description": "Capture screenshots for bric files",
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"web_accessible_resources": [
		"html/save-dialog.html",
		"html/toolbar.html",
		"html/screenshot.html",
		
		"img/url_snapshot.png",
		
		"img/rectangle.png",
		"img/lasso.png",
		"img/save.png",
		"img/clear.png",
		"img/cancel.png"
	],
	"plugins": [
		{"path": "bin/npBracExtenssionProvider.dll", "public": true},
		{"path": "bin/BracExtenssionProvider.plugin", "public": true}
	],
	"browser_action": {
		"default_icon": "img/brac-16x16.png",
		"default_title": "Bric-a-Brac!"
	},
	"permissions": [
		"tabs",
		"*://*/*",
		"management"
	],
	"icons": {
		"16": "img/brac-16x16.png",
		"48": "img/brac-48x48.png",
		"128": "img/brac-128x128.png"
	},
	"manifest_version": 2
}
